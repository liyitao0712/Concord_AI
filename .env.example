# Concord AI 环境变量配置
# 复制此文件为 .env 并填入实际值

# ==================== 基础配置 ====================
APP_NAME=Concord AI
DEBUG=true

# ==================== 数据库 ====================
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/concord

# ==================== Redis ====================
REDIS_URL=redis://localhost:6379/0

# ==================== JWT 认证 ====================
JWT_SECRET=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# ==================== LLM API ====================
# 至少配置一个 LLM API Key（也可在管理后台配置）
ANTHROPIC_API_KEY=sk-ant-xxx
OPENAI_API_KEY=sk-xxx
GEMINI_API_KEY=
DASHSCOPE_API_KEY=
VOLCENGINE_API_KEY=

# ==================== Celery 任务队列 ====================
# Celery 使用 Redis 作为消息代理和结果后端
# REDIS_URL 已在上面配置，Celery 会自动使用

# ==================== Temporal 工作流引擎 ====================
TEMPORAL_HOST=localhost:7233
TEMPORAL_NAMESPACE=default
TEMPORAL_TASK_QUEUE=concord-main-queue

# ==================== 邮件配置（可选，也可在管理后台配置） ====================
# SMTP 发件
SMTP_HOST=smtp.qq.com
SMTP_PORT=465
SMTP_USER=your_email@qq.com
SMTP_PASSWORD=your_auth_code
SMTP_USE_TLS=true

# IMAP 收件
IMAP_HOST=imap.qq.com
IMAP_PORT=993
IMAP_USER=your_email@qq.com
IMAP_PASSWORD=your_auth_code
IMAP_USE_SSL=true

# ==================== 飞书机器人（可选） ====================
# 可在管理后台配置，无需在此填写
FEISHU_APP_ID=
FEISHU_APP_SECRET=

# ==================== 阿里云 OSS（可选） ====================
OSS_ACCESS_KEY_ID=
OSS_ACCESS_KEY_SECRET=
OSS_ENDPOINT=oss-cn-hangzhou.aliyuncs.com
OSS_BUCKET=

# ==================== 本地文件存储（OSS 降级方案） ====================
LOCAL_STORAGE_PATH=data/storage  # 本地存储根目录
LOCAL_STORAGE_ENABLED=true       # 是否启用本地存储
